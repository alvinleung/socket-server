{
  "name": "socket-server",
  "version": "1.0.0",
  "description": "a simple socket server exercise",
  "main": "server.ts",
  "scripts": {
    "build": "tsc",
    "start": "pm2 start dist/server.js --name my-server",
    "restart": "pm2 restart my-server || pm2 start dist/server.js --name my-server",
    "stop": "pm2 stop my-server",
    "delete": "pm2 delete my-server",
    "dev": "pm2 start server.ts --name my-server --interpreter ./node_modules/.bin/ts-node --watch"
  },
  "author": "Alvin Leung",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^22.15.18",
    "socket.io-client": "^4.8.1",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "dotenv": "^16.5.0",
    "socket.io": "^4.8.1"
  }
}
